# Nextcloud Configuration for OpenClaw
# Copy this to ~/.openclaw/nextcloud.env and fill in your values

# Nextcloud server URL (e.g., https://nextcloud.example.com)
export NEXTCLOUD_URL=""

# Nextcloud username
export NEXTCLOUD_USERNAME=""

# Nextcloud app password (generate at: Settings → Security → App passwords)
export NEXTCLOUD_APP_PASSWORD=""

# Workspace folder in Nextcloud (URL-encode special chars like apostrophes)
# Default: "Mark" (or set to "Mark's Workspace")
export NEXTCLOUD_WORKSPACE="Mark's Workspace"
